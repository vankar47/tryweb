            each item in cart
              -total += Number(item.price)
              tr
                td.pl-5.pr-5.pt-2.pb-2=item.title
                td.pl-5.pr-5.pt-2.pb-2= 1
                td.pl-5.pr-5.pt-2.pb-2=item.price
                td.pl-5.pr-5.pt-2.pb-2.nb 
                  a(href='/cart/remove/'+item._id class = "blue bt") &times;
          tfoot
            tr
              td.nb
              td Total:
              td=total
        br
        br
        br  
        a(href = "/succ" class = "btn butt") Checkout

        

