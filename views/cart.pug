          thead
            - var total = 0;
            tr
              th.pl-5.pr-5.pt-2.pb-2 Title
              th.pl-5.pr-5.pt-2.pb-2 Quantity
              th.pl-5.pr-5.pt-2.pb-2 Price
              th.pl-5.p5-5.pt-2.pb-2.nb
